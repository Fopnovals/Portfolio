<form action="#" class="stuff">
    <div class="stuff-inner">
        <a href="" class="stuff-img">
            <img src="img/content/category/1.png" alt="img" />
            <div class="stuff-img-full" style="background-image: url(img/content/stuff.jpg)"></div>
        </a>
        <div class="stuff-tag">
            <a href="" class="stuff-tag-link">
                <div class="stuff-tag-icon">
                    <input type="radio" name="type-of-item" class="icon icon-crystal">
                </div>
                <div class="stuff-tag-name">crystal</div>
            </a>
            <a href="" class="stuff-tag-link">
                <div class="stuff-tag-icon">
                    <input type="radio" name="type-of-item" class="icon icon-powder disabled">
                </div>
                <div class="stuff-tag-name">powder</div>
            </a>
        </div>
        <div class="stuff-name">
            <a href="">Seldenafil</a>
        </div>
        <div class="nav nav-price">
            <div class="stuff-price">
                <div class="price price-new">$&nbsp;271.27</div>
            </div>
            {{> weight}}
        </div>
        <div class="stuff-actions">
            {{> color}}
            <button type="button" class="btn btn-add">
                <i class="icon icon-cart"></i>
                <span class="btn-add-inner">Add to cart</span>
            </button>
        </div>
    </div>
</form>
